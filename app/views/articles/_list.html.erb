<% articles.each do |article| %>
  <div class="article-icon <%= default_icon %>">
    <%= link_to truncate(article.title, :length => truncate_length), { :controller => 'articles', :action => 'show', :id => article.id }, :title => article.title %>
    <%= format_article_summary(article, summary_format) %>
  </div>	
<% end %>
