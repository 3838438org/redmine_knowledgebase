<p>
  <label><%= l(:allow_sort_category_tree) %></label>
  <%= hidden_field_tag 'settings[sort_category_tree]', 0 %>
  <%= check_box_tag 'settings[sort_category_tree]', 1, settings_value(:sort_category_tree) == 1 %>
</p>

<p>
  <label><%= l(:show_category_totals) %></label>
  <%= hidden_field_tag 'settings[show_category_totals]', 0 %>
  <%= check_box_tag 'settings[show_category_totals]', 1, settings_value(:show_category_totals) == 1 %>
</p>

<p>
  <label><%= l(:summary_item_limit) %>:</label>
  <%= text_field_tag "settings[summary_limit]", settings_value(:summary_limit) %>
</p>

<p>
  <label><%= l(:disable_article_summaries) %></label>
  <%= hidden_field_tag 'settings[disable_article_summaries]', 0 %>
  <%= check_box_tag 'settings[disable_article_summaries]', 1, settings_value(:disable_article_summaries) == 1 %>
</p>